.big-boxes
  section.big-boxes-mobile
    #carousel-blue-yellow.carousel.slide(data-ride='carousel')
      ol.carousel-indicators
        li.active(data-target='#carousel-blue-yellow', data-slide-to='0')
        li(data-target='#carousel-blue-yellow', data-slide-to='1')
      .carousel-inner(role='listbox')
        .carousel-item.active
          .section-much
            img.style-imag-yellow(src=bigBoxes.defaultTheme.imageOne, alt='')
            span.style-container-blue=bigBoxes.defaultTheme.textOne
        .carousel-item
          .section-get
            img(src=bigBoxes.defaultTheme.imageTwo, alt='')
            span.style-container-yellow=bigBoxes.defaultTheme.textTwo
      a.carousel-control-prev(href='#carousel-blue-yellow', role='button', data-slide='prev')
        span.carousel-control-prev-icon(aria-hidden='true')
        span.sr-only Previous
      a.carousel-control-next(href='#carousel-blue-yellow', role='button', data-slide='next')
        span.carousel-control-next-icon(aria-hidden='true')
        span.sr-only Next
        
  section.section-much-get.big-boxes-web
    .section-much
      img(src=bigBoxes.defaultTheme.imageOne, width='120', height='100', alt='')
      span.style-container-blue=bigBoxes.defaultTheme.textOne
    .section-get
      img(src=bigBoxes.defaultTheme.imageTwo, width='160', height='100', alt='')
      span.style-container-yellow=bigBoxes.defaultTheme.textTwo
