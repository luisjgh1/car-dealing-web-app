doctype html
html(lang='en')
  head
    include composition/header-libraries.pug
    title=title
    meta(name="description" content=description)
    include composition/accessibility-metadata.pug
  body
    include composition/header.pug
    .first-section.unsubscribe-page
      .d-block
        h1.text-center.text-white=firstSection.title
    .bg-white
      .container.py-5
        .row
          .col-md-8.offset-md-2
            .row.d-flex.justify-content-center.pb-5
              .col-4.col-md-2
                img.img-fluid(src=pageContent.image)
            p.text-center.text-secondary.yellow-underline.center-horizontal-after=pageContent.firstText
            p.text-center.text-secondary.py-4
              span.font-weight-3=pageContent.secondText.bold
              |
              span=pageContent.secondText.normal
            a.no-underline-hover(href=pageContent.button.url)
              .d-flex.justify-content-center.px-5.px-md-0
                .style-button-form-learn.yellow-button=pageContent.button.text
    include composition/footer.pug
    script(type='application/ld+json').
      {
          "@context": "http://schema.org",
          "@type": "WebSite",
          "url": "#{ url }",
          "potentialAction": {
            "@type": "SearchAction",
            "target": "#{ url }/search",
            "query-input": "required"
          }
          "description": "#{ description }",
          "title": "#{ title }"
      }